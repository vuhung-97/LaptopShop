@model LaptopShop.Areas.Model.LaptopEditViewModel

@{
    ViewData["Title"] = "Chỉnh sửa thông tin laptop";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1 style="text-align: center">Chỉnh sửa thông tin sản phẩm</h1>


<div class="d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 80%; border-radius: 1rem;">
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data" onsubmit="return submitForm(event)">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>
                <input type="hidden" asp-for="Laptop.IdLaptop" />

                <div class="row g-3">
                    <!-- Thông tin laptop-->
                    <div class="col-md-7">
                        <div class="form-group">
                            <label asp-for="Laptop.TenLapTop" class="form-label fw-semibold">Tên laptop</label>
                            <input asp-for="Laptop.TenLapTop" class="form-control rounded-pill shadow-sm px-3" />
                            <span asp-validation-for="Laptop.TenLapTop" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <!-- Loại laptop -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Laptop.IdLoai" class="form-label fw-semibold">Loại laptop</label>
                                    <select asp-for="Laptop.IdLoai" class="form-control rounded-pill shadow-sm px-3" asp-items="ViewBag.IdLoai"></select>
                                    <span asp-validation-for="Laptop.IdLoai" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Thương hiệu -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Laptop.IdThuongHieu" class="form-label fw-semibold">Thương hiệu</label>
                                    <select asp-for="Laptop.IdThuongHieu" class="form-control rounded-pill shadow-sm px-3" asp-items="ViewBag.IdThuongHieu"></select>
                                    <span asp-validation-for="Laptop.IdThuongHieu" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin chi tiết -->
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="ThongTin.Cpu" class="form-label fw-semibold">CPU</label>
                                <input asp-for="ThongTin.Cpu" class="form-control rounded-pill shadow-sm px-3" />
                                <span asp-validation-for="ThongTin.Cpu" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ThongTin.DoHoa" class="form-label fw-semibold">Đồ họa</label>
                                <input asp-for="ThongTin.DoHoa" class="form-control rounded-pill shadow-sm px-3" />
                                <span asp-validation-for="ThongTin.DoHoa" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="ThongTin.Ram" class="form-label fw-semibold">RAM</label>
                                <input asp-for="ThongTin.Ram" class="form-control rounded-pill shadow-sm px-3" />
                                <span asp-validation-for="ThongTin.Ram" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="ThongTin.Ocung" class="form-label fw-semibold">Ổ cứng</label>
                                <input asp-for="ThongTin.Ocung" class="form-control rounded-pill shadow-sm px-3" />
                                <span asp-validation-for="ThongTin.Ocung" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="ThongTin.ManHinh" class="form-label fw-semibold">Màn hình</label>
                                <input asp-for="ThongTin.ManHinh" class="form-control rounded-pill shadow-sm px-3" />
                                <span asp-validation-for="ThongTin.ManHinh" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ThongTin.HeDieuHanh" class="form-label fw-semibold">Hệ điều hành</label>
                                <input asp-for="ThongTin.HeDieuHanh" class="form-control rounded-pill shadow-sm px-3" />
                                <span asp-validation-for="ThongTin.HeDieuHanh" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ThongTin.CongGiaoTiep" class="form-label fw-semibold">Cổng giao tiếp</label>
                            <input asp-for="ThongTin.CongGiaoTiep" class="form-control rounded-pill shadow-sm px-3" />
                            <span asp-validation-for="ThongTin.CongGiaoTiep" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="ThongTin.Pin" class="form-label fw-semibold">Pin</label>
                                <input asp-for="ThongTin.Pin" class="form-control rounded-pill shadow-sm px-3" />
                                <span asp-validation-for="ThongTin.Pin" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="ThongTin.TrongLuong" class="form-label fw-semibold">Trọng lượng</label>
                                <input asp-for="ThongTin.TrongLuong" class="form-control rounded-pill shadow-sm px-3" />
                                <span asp-validation-for="ThongTin.TrongLuong" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="Laptop.SoLuong" class="form-label fw-semibold">Tồn Kho</label>
                                <input asp-for="Laptop.SoLuong" class="form-control rounded-pill shadow-sm px-3" min="0" />
                                <span asp-validation-for="Laptop.SoLuong" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Laptop.GiaBan" class="form-label fw-semibold">Giá bán (VND)</label>
                                <div class="input-group">
                                    <input type="text" id="GiaBanFormatted" class="form-control rounded-pill shadow-sm" oninput="formatCurrencyVND(this)" />
                                    <input type="hidden" asp-for="Laptop.GiaBan" />
                                </div>
                                <span asp-validation-for="Laptop.GiaBan" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" class="btn btn-round btn-primary">Lưu</button>
                            <a asp-action="Index" style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);" class="btn btn-round btn-info">Quay lại</a>
                        </div>
                    </div>

                    <!-- Hình ảnh sản phẩm -->
                    <div class="col-md-5">
                        <label asp-for="Laptop.HinhAnh" class="form-label fw-semibold">Ảnh sản phẩm</label>
                        <div id="imagePreviewContainer" class="d-flex flex-wrap overflow-auto" style="max-height: 300px; padding: 10px;">
                            @if (!string.IsNullOrEmpty(Model.Laptop.HinhAnh))
                            {
                                var images = Model.Laptop.HinhAnh.Split(",");
                                foreach (var img in images)
                                {
                                    <div class="image-wrapper position-relative">
                                        <img src="@Url.Content("~/hinh/laptop/" + img)" class="img-thumbnail img-clickable" style="width: 100px; height: 100px; margin: 5px;" onclick="openImageModal('@Url.Content("~/hinh/laptop/" + img)')" />
                                        <button type="button" class="btn btn-danger btn-sm position-absolute" style="top: 5px; right: 5px;" onclick="removeOldImage(this, '@img')">❌</button>
                                        <input type="hidden" name="OldImages" value="@img" />
                                    </div>
                                }
                            }
                        </div>

                        <div class="text-center mt-3">
                            <label for="fileUpload" class="btn btn-primary rounded-pill">Chọn ảnh mới</label>
                            <input type="file" id="fileUpload" name="HinhAnhMoi" class="d-none" multiple accept="image/*" onchange="previewNewImages(event)" />
                        </div>

                        <span asp-validation-for="Laptop.HinhAnh" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>







<!-- Modal xem ảnh lớn -->
<div id="imageModal" class="modal" onclick="closeImageModal()">
    <span class="close">&times;</span>
    <img class="modal-content" id="modalImage">
</div>

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.8);
        text-align: center;
    }

    .modal-content {
        max-width: 60%;
        max-height: 80%;
        object-fit: contain;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .close {
        position: absolute;
        top: 20px;
        right: 30px;
        font-size: 40px;
        color: white;
        cursor: pointer;
    }

    .image-wrapper img {
        width: 120px;
        height: 120px;
        margin: 5px;
        object-fit: contain; /* Giữ tỷ lệ khung hình */
    }

</style>

<script>
    // dịnh dạng lại giá
         function formatCurrencyVND(input) {
        const rawValue = input.value.replace(/\D/g, ''); // chỉ lấy số
        input.value = rawValue.replace(/\B(?=(\d{3})+(?!\d))/g, ".");

        const hiddenInput = document.querySelector('[name="Laptop.GiaBan"]');
        if (hiddenInput) {
            hiddenInput.value = rawValue;
        }
    }

    function submitForm(event) {
        // Không cần làm gì nữa nếu đã cập nhật hidden input trong formatCurrencyVND
        return true;
    }

    window.onload = function () {
        // Khi load trang (ví dụ đang ở chế độ Edit), tự động định dạng lại giá hiển thị
        const hiddenInput = document.querySelector('[name="Laptop.GiaBan"]');
        const displayInput = document.getElementById('GiaBanFormatted');
        if (hiddenInput && displayInput) {
            let value = hiddenInput.value;
            displayInput.value = value.replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        }
    };


        //phần hình ảnh
    function removeOldImage(button, imageName) {
        const wrapper = button.closest('.image-wrapper');
        wrapper.remove();

        // Thêm hidden input để đánh dấu ảnh bị xóa
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'DeletedImages';
        input.value = imageName;
        document.forms[0].appendChild(input);
    }

    function previewNewImages(event) {
        const container = document.getElementById('imagePreviewContainer');
        for (let file of event.target.files) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const div = document.createElement('div');
                div.classList.add('image-wrapper', 'position-relative');

                const img = document.createElement('img');
                img.src = e.target.result;
                img.classList.add('img-thumbnail', 'img-clickable');
                img.style.width = "120px";
                img.style.height = "120px";
                img.style.margin = "5px";

                const button = document.createElement('button');
                button.type = "button";
                button.classList.add('btn', 'btn-danger', 'btn-sm', 'position-absolute');
                button.style.top = "5px";
                button.style.right = "5px";
                button.innerHTML = "❌";
                button.onclick = function () {
                    div.remove();
                };

                div.appendChild(img);
                div.appendChild(button);
                container.appendChild(div);
            };
            reader.readAsDataURL(file);
        }
    }

    function openImageModal(imageSrc) {
        const modal = document.getElementById('imageModal');
        const modalImg = document.getElementById('modalImage');
        modal.style.display = "block";
        modalImg.src = imageSrc;
    }

    function closeImageModal() {
        document.getElementById('imageModal').style.display = "none";
    }
    function submitForm(event) {
        // Không cần chỉnh sửa form trước, để ASP.NET xử lý các input Hidden bình thường
        return true; // Cho phép form submit
    }

</script>
