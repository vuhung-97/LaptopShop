@{
    ViewData["Title"] = "Liên hệ";
    Layout = "_MyLayoutCustomer";
}

<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
            <span class="bg-secondary pr-3">Liên hệ với chúng tôi</span>
        </h2>

        <div class="row px-xl-5">
            <div class="col-lg-6 mb-5">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0"><i class="fa fa-envelope mr-2"></i>Gửi tin nhắn cho chúng tôi</h5>
                    </div>
                    <div class="card-body p-4">
                        <div id="success"></div>
                        <form name="sentMessage" id="contactForm" novalidate="novalidate">
                            <div class="form-group mb-3">
                                <label for="name" class="font-weight-bold mb-2">Họ và tên</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-white border-right-0">
                                            <i class="fa fa-user text-primary"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control border-left-0" id="name" placeholder="Nhập họ và tên của bạn"
                                           required="required" data-validation-required-message="Vui lòng nhập họ và tên" />
                                </div>
                                <p class="help-block text-danger small mt-2"></p>
                            </div>

                            <div class="form-group mb-3">
                                <label for="email" class="font-weight-bold mb-2">Email</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-white border-right-0">
                                            <i class="fa fa-envelope text-primary"></i>
                                        </span>
                                    </div>
                                    <input type="email" class="form-control border-left-0" id="email" placeholder="Nhập địa chỉ email"
                                           required="required" data-validation-required-message="Vui lòng nhập email" />
                                </div>
                                <p class="help-block text-danger small mt-2"></p>
                            </div>

                            <div class="form-group mb-3">
                                <label for="subject" class="font-weight-bold mb-2">Tiêu đề</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-white border-right-0">
                                            <i class="fa fa-heading text-primary"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control border-left-0" id="subject" placeholder="Nhập tiêu đề"
                                           required="required" data-validation-required-message="Vui lòng nhập tiêu đề" />
                                </div>
                                <p class="help-block text-danger small mt-2"></p>
                            </div>

                            <div class="form-group mb-4">
                                <label for="message" class="font-weight-bold mb-2">Nội dung</label>
                                <textarea class="form-control" rows="6" id="message" placeholder="Nhập nội dung tin nhắn"
                                          required="required" data-validation-required-message="Vui lòng nhập nội dung"></textarea>
                                <p class="help-block text-danger small mt-2"></p>
                            </div>

                            <div>
                                <button class="btn btn-primary px-4 py-2" type="submit" id="sendMessageButton">
                                    <i class="fa fa-paper-plane mr-2"></i>Gửi tin nhắn
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0"><i class="fa fa-map-marked-alt mr-2"></i>Bản đồ</h5>
                    </div>
                    <div class="card-body p-0">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.4946681007087!2d106.66521897480936!3d10.773297189376824!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ec3c161a3fb%3A0xef77cd47a1cc691e!2sHo%20Chi%20Minh%20City%20University%20of%20Technology%20-%20HUTECH!5e0!3m2!1sen!2s!4v1682487760960!5m2!1sen!2s"
                                style="width: 100%; height: 300px; border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>

                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0"><i class="fa fa-info-circle mr-2"></i>Thông tin liên hệ</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-4">
                            <div class="flex-shrink-0 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mr-3" style="width: 50px; height: 50px;">
                                <i class="fa fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h6 class="font-weight-bold mb-1">Địa chỉ</h6>
                                <p class="mb-0">475A Điện Biên Phủ, Phường 25, Quận Bình Thạnh, TP. Hồ Chí Minh</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-4">
                            <div class="flex-shrink-0 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mr-3" style="width: 50px; height: 50px;">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <div>
                                <h6 class="font-weight-bold mb-1">Email</h6>
                                <p class="mb-0">laptopshop@example.com</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-4">
                            <div class="flex-shrink-0 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mr-3" style="width: 50px; height: 50px;">
                                <i class="fa fa-phone-alt"></i>
                            </div>
                            <div>
                                <h6 class="font-weight-bold mb-1">Hotline</h6>
                                <p class="mb-0">028 3512 0785</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mr-3" style="width: 50px; height: 50px;">
                                <i class="fa fa-clock"></i>
                            </div>
                            <div>
                                <h6 class="font-weight-bold mb-1">Giờ làm việc</h6>
                                <p class="mb-0">Thứ 2 - Thứ 7: 08:00 - 20:00<br>Chủ nhật: 09:00 - 18:00</p>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <h6 class="font-weight-bold mb-3">Kết nối với chúng tôi</h6>
                            <div class="d-flex">
                                <a href="#" class="btn btn-primary rounded-circle mr-2" style="width: 40px; height: 40px;">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" class="btn btn-info rounded-circle mr-2" style="width: 40px; height: 40px;">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="btn btn-danger rounded-circle mr-2" style="width: 40px; height: 40px;">
                                    <i class="fab fa-youtube"></i>
                                </a>
                                <a href="#" class="btn btn-pink rounded-circle" style="width: 40px; height: 40px; background-color: #E1306C;">
                                    <i class="fab fa-instagram"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->