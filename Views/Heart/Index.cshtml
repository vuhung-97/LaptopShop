@model IEnumerable<LaptopShop.ViewModels.CartViewModel>
@{
    ViewData["Title"] = "Danh sách yêu thích";
    Layout = "_MyLayoutCustomer";
}

<!-- Cart Start -->
<div class="container-fluid py-5">
    <div class="container">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
            <span class="bg-secondary pr-3">Danh sách yêu thích của bạn</span>
        </h2>

        <div class="row px-xl-5">
            @if (Model != null && Model.Any())
            {
                <div class="col-lg-8 mb-5">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-0">
                            <table class="table table-hover mb-0">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th class="py-3 pl-4" style="width: 50%;">Sản phẩm</th>
                                        <th class="py-3 text-center" style="width: 25%;">Đơn giá</th>
                                        <th class="py-3 text-center" style="width: 10%;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="py-3 pl-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="mr-3">
                                                        <img src="~/Hinh/HangHoa/@item.Hinh" alt="@item.Name"
                                                             class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                                    </div>
                                                    <div>
                                                        <a asp-action="Detail" asp-controller="Shop" asp-route-idlaptop="@item.Id"
                                                           class="h6 text-decoration-none text-truncate" style="max-width: 240px; display: block;">
                                                            @item.Name
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3 text-center align-middle">
                                                <span class="font-weight-medium">@string.Format("{0:N0}", item.Price) VNĐ</span>
                                            </td>
                                            <td class="py-3 text-center align-middle">
                                                <a class="btn btn-sm btn-danger rounded-circle" asp-action="RemoveFromListHeart" asp-controller="Heart" asp-route-idlaptop="@item.Id">
                                                    <i class="fa fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left mr-2"></i>Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            } 
            else
            {
                <div class="col-12 text-center py-5">
                    <img src="/img/empty-cart.png" alt="Empty Cart" class="img-fluid mb-4" style="max-width: 200px;">
                    <h3 class="text-muted mb-4">Danh sách yêu thích của bạn đang trống</h3>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary px-4 py-2">
                        <i class="fa fa-shopping-bag mr-2"></i>Tiếp tục mua sắm
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<!-- Cart End -->