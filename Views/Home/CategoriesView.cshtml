@model IEnumerable<LaptopShop.ViewModels.LoaiViewModel>
@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
        <a class="text-decoration-none" asp-controller="HangHoa" asp-action="Index" asp-route-loai="@item.IdLoai">
            <div class="cat-item d-flex align-items-center mb-4 shadow-hover">
                <div class="cat-img-container">
                    <img class="cat-img" src="" alt="@item.TenLoai">
                    <div class="cat-img-overlay"></div>
                </div>
                <div class="cat-info">
                    <h6 class="cat-title">@item.TenLoai</h6>
                    <div class="cat-count">
                        <span class="count-number">@item.SoLuong</span>
                        <span class="count-text">products</span>
                    </div>
                </div>
                <div class="cat-arrow">
                    <i class="fa fa-angle-right"></i>
                </div>
            </div>
        </a>
    </div>
}

<!-- CSS to add to your stylesheet -->
<style>
.cat-item {
    background: #ffffff;
    border-radius: 30px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    align-items: center;
    padding-right: 15px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.07);
    border: 1px solid rgba(0, 0, 0, 0.03);
}

.cat-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    border-color: rgba(0, 0, 0, 0);
}

.cat-img-container {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    margin: 5px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
}

.cat-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.cat-item:hover .cat-img {
    transform: scale(1.1);
}

.cat-img-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(66, 103, 178, 0.3), rgba(66, 133, 244, 0));
    opacity: 0;
    transition: opacity 0.3s ease;
}

.cat-item:hover .cat-img-overlay {
    opacity: 1;
}

.cat-info {
    flex: 1;
    padding-left: 18px;
}

.cat-title {
    margin: 0 0 5px 0;
    font-weight: 600;
    font-size: 16px;
    color: #333;
    transition: color 0.2s ease;
}

.cat-item:hover .cat-title {
    color: #4267B2;
}

.cat-count {
    display: flex;
    align-items: center;
}

.count-number {
    font-weight: 600;
    color: #4267B2;
    font-size: 14px;
    margin-right: 4px;
}

.count-text {
    color: #6c757d;
    font-size: 13px;
}

.cat-arrow {
    width: 25px;
    height: 25px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f1f5ff;
    border-radius: 50%;
    color: #4267B2;
    font-size: 14px;
    margin-left: 10px;
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
}

.cat-item:hover .cat-arrow {
    opacity: 1;
    transform: translateX(0);
}

.cat-item:hover .count-number {
    animation: countPulse 1s ease;
}
</style>