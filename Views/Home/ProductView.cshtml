@model IEnumerable<LaptopShop.ViewModels.LaptopViewModel>
@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 pb-4">
        <div class="product-card-wrapper">
            <div class="product-img-container">
                <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.IdLaptop">
                    <img class="product-img" src="~/Hinh/Laptop/@item.HinhAnh" alt="@item.TenLapTop">
                    <div class="image-overlay"></div>
                </a>

                <div class="product-actions">
                    <a asp-action="AddToListHeartInHome" asp-controller="Heart" asp-route-idlaptop="@item.IdLaptop" class="action-btn heart-btn"><i class="fa fa-heart"></i></a>
                    <a asp-action="AddToCartInHome" asp-controller="ShoppingCart" asp-route-idlaptop="@item.IdLaptop" class="action-btn cart-btn-in-hone"><i class="fa fa-shopping-cart"></i></a>
                    <a asp-action="Detail" asp-controller="Shop" asp-route-idlaptop="@item.IdLaptop" class="action-btn view-btn"><i class="fa fa-eye"></i></a>
                </div>

                @if (item.SoLuong > 0)
                {
                    <div class="status-badge in-stock"><i class="fa fa-check-circle"></i> Còn hàng</div>
                    <div class="discount-badge">-30%</div>
                }
                else
                {
                    <div class="status-badge out-of-stock"><i class="fa fa-times-circle"></i> Hết hàng</div>
                }
            </div>

            <div class="product-info">
                <div class="product-category">@item.TenLoai</div>
                <a asp-action="Detail" asp-controller="Shop" asp-route-idlaptop="@item.IdLaptop" class="product-name-link">
                    <h5 class="product-name">@item.TenLapTop</h5>
                </a>

                <div class="price-section">
                    <div class="current-price">@string.Format("{0:N0}", item.GiaBan) <span class="currency">VNĐ</span></div>
                    @if (item.SoLuong > 0)
                    {
                        <div class="original-price">@string.Format("{0:N0}", item.GiaBan * 130 / 100) <span class="currency">VNĐ</span></div>
                    }
                </div>

                <div class="product-rating">
                    
                </div>
            </div>
        </div>
    </div>
}

<style>
    .product-card-wrapper {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1), 0 2px 16px rgba(0, 0, 0, 0.05);
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
    }

        .product-card-wrapper::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, #6366f1, #8b5cf6, #ec4899);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .product-card-wrapper:hover::before {
            opacity: 1;
        }

        .product-card-wrapper:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15), 0 8px 32px rgba(0, 0, 0, 0.1);
        }

    .product-img-container {
        position: relative;
        overflow: hidden;
        height: 240px;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    }

    .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 50%, rgba(236, 72, 153, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .product-img-container:hover .product-img {
        transform: scale(1.1) rotate(1deg);
    }

    .product-img-container:hover .image-overlay {
        opacity: 1;
    }

    .product-actions {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        gap: 12px;
        opacity: 0;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .product-img-container:hover .product-actions {
        opacity: 1;
    }

    .action-btn {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        font-size: 16px;
        transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .heart-btn {
        background: rgba(239, 68, 68, 0.9);
        color: white;
    }

    .cart-btn-in-hone {
        background: rgba(34, 197, 94, 0.9);
        color: white;
    }

    .view-btn {
        background: rgba(59, 130, 246, 0.9);
        color: white;
    }

    .action-btn:hover {
        transform: scale(1.15) translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

    .status-badge, .discount-badge {
        position: absolute;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .status-badge {
        top: 16px;
        left: 16px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .in-stock {
        background: rgba(34, 197, 94, 0.9);
        color: white;
    }

    .out-of-stock {
        background: rgba(239, 68, 68, 0.9);
        color: white;
    }

    .discount-badge {
        top: 16px;
        right: 16px;
        background: rgba(251, 146, 60, 0.9);
        color: white;
        animation: pulse 2s infinite;
    }

    .product-info {
        padding: 24px 20px;
        text-align: center;
    }

    .product-category {
        color: #6366f1;
        font-size: 13px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .product-name-link {
        text-decoration: none;
        color: inherit;
    }

    .product-name {
        color: #1e293b;
        font-weight: 700;
        font-size: 16px;
        margin-bottom: 16px;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        transition: color 0.3s ease;
        min-height: 42px;
    }

    .product-name-link:hover .product-name {
        color: #6366f1;
    }

    .price-section {
        margin-bottom: 16px;
    }

    .current-price {
        color: #1e293b;
        font-size: 20px;
        font-weight: 800;
        margin-bottom: 4px;
    }

    .currency {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
    }

    .original-price {
        color: #94a3b8;
        font-size: 14px;
        text-decoration: line-through;
        font-weight: 500;
    }

    .product-rating {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .stars {
        color: #fbbf24;
        font-size: 14px;
        letter-spacing: 2px;
    }

    .rating-text {
        font-size: 12px;
        color: #64748b;
        font-weight: 500;
    }

    .product-actions {
        flex-direction: column;
        gap: 8px;
    }

    .action-btn {
        width: 44px;
        height: 44px;
    }

    }
</style>