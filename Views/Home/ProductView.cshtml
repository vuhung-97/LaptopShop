@model IEnumerable<LaptopShop.ViewModels.LaptopViewModel>
@foreach (var item in Model)
{
    <div class="col-lg-2 col-md-4 col-sm-6 pb-1">
        <div class="product-item mb-4">
            <div class="product-card-wrapper">
                <!-- Product Image with Overlay Effects -->
                <div class="product-img-container">
                    <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.IdLaptop">
                        <img class="product-img" src="~/Hinh/Laptop/@item.HinhAnh" alt="@item.TenLapTop">
                    </a>
                    <!-- Quick Action Buttons -->
                    <div class="product-actions">
                        <a asp-action="AddToListHeartInHome" asp-controller="Heart" asp-route-idlaptop="@item.IdLaptop" class="action-btn"><i class="fa fa-heart"></i></a>
                        <a asp-action="AddToCartInHome" asp-controller="ShoppingCart" asp-route-idlaptop="@item.IdLaptop" class="action-btn"><i class="fa fa-shopping-cart"></i></a>
                        <a asp-action="Detail" asp-controller="Shop" asp-route-idlaptop="@item.IdLaptop" class="action-btn"><i class="fa fa-search"></i></a>
                    </div>
                    <!-- Sale Badge if needed -->
                    <div class="sale-badge">-30%</div>
                </div>

                <!-- Product Details -->
                <div class="product-info">
                    <div class="product-category">@item.TenLoai</div>
                    <a asp-action="Detail" asp-controller="Shop" asp-route-idlaptop="@item.IdLaptop" class="product-name"><h5>@item.TenLapTop</h5></a>

                    <!-- Price Section -->
                    <div class="current-price">
                        <span class="current-price">@string.Format("{0:N0}", item.GiaBan) VNĐ</span><br />
                        <span class="original-price">@string.Format("{0:N0}", item.GiaBan * 130 / 100) VNĐ</span>
                    </div>

                    <!-- Ratings -->
                    <div class="product-rating">
                        <div class="stars">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        <span class="rating-count">(99)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<!-- CSS that should be added to your stylesheet -->
<style>
    .product-item {
        transition: all 0.3s ease;
    }

    .product-card-wrapper {
        background-color: #fff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card-wrapper:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.12);
    }

    .product-img-container {
        position: relative;
        overflow: hidden;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
    }

    .product-img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-img-container:hover .product-img {
        transform: scale(1.08);
    }

    .product-actions {
        position: absolute;
        bottom: -50px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
        gap: 8px;
        padding: 10px 0;
        background: rgba(255, 255, 255, 0.9);
        transition: bottom 0.3s ease;
    }

    .product-img-container:hover .product-actions {
        bottom: 0;
    }

    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: #fff;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .action-btn:hover {
        background: #007bff;
        color: white;
    }

    .sale-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #ff6b6b;
        color: white;
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
    }

    .product-info {
        padding: 18px 15px;
        text-align: center;
    }

    .product-category {
        color: #6c757d;
        font-size: 13px;
        margin-bottom: 6px;
    }

    .product-name {
        display: block;
        color: #343a40;
        font-weight: 600;
        font-size: 15px;
        text-decoration: none;
        margin-bottom: 12px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        transition: color 0.2s ease;
    }

    .product-name:hover {
        color: #007bff;
    }

    .product-price {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 10px;
    }

    .current-price {
        color: #343a40;
        font-size: 18px;
        font-weight: 700;
    }

    .original-price {
        color: #adb5bd;
        font-size: 14px;
        text-decoration: line-through;
    }

    .product-rating {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }

    .stars {
        color: #ffc107;
        letter-spacing: 2px;
    }

    .rating-count {
        font-size: 12px;
        color: #6c757d;
    }
</style>