@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transparent Login Form</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f0f0; /* màu nền nhẹ cho trang */
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0); /* Màu đen với độ trong suốt 50% */
            z-index: 9998; /* Đảm bảo overlay nằm dưới form login */
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 16px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 380px;
            text-align: center;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 9999; /* Đảm bảo form nằm trên overlay */
        }

        .logo {
            width: 40px;
            height: 40px;
            margin-bottom: 15px;
        }

        h1 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 5px;
            color: #333;
        }

        .subtitle {
            font-size: 14px;
            color: #666;
            margin-bottom: 25px;
        }

        .input-container {
            position: relative;
            margin-bottom: 15px;
        }

        input {
            width: 100%;
            padding: 12px 35px 12px 15px;
            border: 1px solid #ddd;
            border-radius: 12px;
            font-size: 15px;
            box-sizing: border-box;
        }

            input:focus {
                outline: none;
                border-color: #0074e4;
            }

        .icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #777;
            font-size: 18px;
        }

        .primary-button {
            width: 100%;
            background-color: #e60023;
            color: white;
            border: none;
            border-radius: 24px;
            padding: 14px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 10px;
        }

            .primary-button:hover {
                background-color: #d50c22;
            }

        .divider {
            display: flex;
            align-items: center;
            margin: 20px 0;
        }

        .divider-line {
            flex-grow: 1;
            height: 1px;
            background-color: #ddd;
        }

        .divider-text {
            padding: 0 15px;
            color: #777;
            font-size: 14px;
        }

        .social-button {
            width: 100%;
            background-color: #1877f2;
            color: white;
            border: none;
            border-radius: 24px;
            padding: 12px;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
        }

            .social-button img {
                margin-right: 10px;
                width: 20px;
                height: 20px;
            }

        .google-button {
            background-color: white;
            border: 1px solid #ddd;
            color: #555;
        }

        .footer {
            font-size: 12px;
            color: #777;
            margin-top: 25px;
        }

            .footer a {
                color: #555;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        .login-link {
            font-size: 14px;
            margin-top: 15px;
        }

            .login-link a {
                color: #0074e4;
                text-decoration: none;
                font-weight: 500;
            }

        .business-link {
            font-size: 13px;
            margin-top: 15px;
        }

            .business-link a {
                color: #0074e4;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="~/Hinh/logoshop.jpg" alt="Logo" class="logo">
        <h1>Welcome to LAPSHOP</h1>
        @if(ViewBag.ThongBao == null)
        {
            <p class="subtitle">Find new ideas to try</p>
        }
        else
        {
            <p class="subtitle" style="color: red;">@ViewBag.ThongBao</p>
        }
        

        <form asp-controller="Login" asp-action="CheckAccount">
            <div class="input-container">
                <input type="text" placeholder="Write your username" required name="us">
                <span class="icon">✉️</span>
            </div>

            <div class="input-container">
                <input type="password" placeholder="Write your password" required name="pw">
                <span class="icon">🔒</span>
            </div>

            <button type="submit" class="primary-button">Đăng nhập</button>
        </form>

        <div class="divider">
            <div class="divider-line"></div>
            <div class="divider-text">OR</div>
            <div class="divider-line"></div>
        </div>
        <form asp-action="DangKy" asp-controller="Login">
            <button type="submit" class="primary-button" style="background-color:darkblue;">Đăng ký</button>
        </form>
        
        <p class="footer">
            By continuing, you agree to Pinterest's <a href="#">Terms of Service</a> and acknowledge you've read our <a href="#">Privacy Policy</a>
        </p>

    </div>
</body>
</html>