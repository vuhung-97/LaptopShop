@model IEnumerable<LaptopShop.ViewModels.LoaiViewModel>


@{
    string? loaiDangChon = ViewBag.CheckedLoai as string;

    string thuonghieu = "";
    var idthuonghieu = Context.Request.Query["IdThuongHieu"].ToString();
    thuonghieu = idthuonghieu;
}

<h5 class="section-title position-relative text-uppercase mb-3">
    <span class="bg-secondary pr-3">Theo nhu cầu sử dụng:</span>
</h5>
<div class="bg-light p-4 mb-30">
    <form>
        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
            <input type="checkbox" class="custom-control-input" id="price-all"
            @(loaiDangChon == "" ? "checked" : "") />
            <label for="price-all" class="custom-control-label">
                <a asp-controller="Shop" asp-action="Index" asp-route-idthuonghieu="@thuonghieu">All</a>
            </label>
        </div>

        @foreach (var item in Model)
        {
            var isChecked = (loaiDangChon != "" && loaiDangChon == item.IdLoai);
            <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                <input type="checkbox"
                       class="custom-control-input"
                       id="price-@item.IdLoai"
                @(isChecked ? "checked" : "") />

                <label for="price-@item.IdLoai" class="custom-control-label">
                    <a asp-controller="Shop"
                       asp-action="Index"
                       asp-route-idloai="@item.IdLoai"
                       asp-route-idthuonghieu="@thuonghieu">@item.TenLoai</a>
                </label>

                <span class="badge border font-weight-normal">@item.SoLuong</span>
            </div>
        }
    </form>
</div>
