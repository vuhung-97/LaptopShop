@model IEnumerable<LaptopShop.ViewModels.ThuongHieuViewModel>


@{
    string? thuonghieudangchon = ViewBag.CheckedThuongHieu as string;

    string loai = "";
    var idloai = Context.Request.Query["idloai"].ToString();
    loai = idloai;
}

<h5 class="section-title position-relative text-uppercase mb-3">
    <span class="bg-secondary pr-3">Theo thương hiệu:</span>
</h5>
<div class="bg-light p-4 mb-30">
    <form>
        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
            <input type="checkbox" class="custom-control-input" id="price-all"
            @(thuonghieudangchon == "" ? "checked" : "") />
            <label for="price-all" class="custom-control-label">
                <a asp-controller="Shop" asp-action="Index" asp-route-idloai="@loai">All</a>
            </label>
        </div>

        @foreach (var item in Model)
        {
            var isChecked = (thuonghieudangchon != "" && thuonghieudangchon == item.IdThuongHieu);
            <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                <input type="checkbox"
                       class="custom-control-input"
                       id="price-@item.IdThuongHieu"
                @(isChecked ? "checked" : "") />

                <label for="price-@item.IdThuongHieu" class="custom-control-label">
                    <a asp-controller="Shop"
                       asp-action="Index"
                       asp-route-idloai="@loai"
                       asp-route-idthuonghieu="@item.IdThuongHieu">@item.TenThuongHieu</a>
                </label>

                <span class="badge border font-weight-normal">@item.SoLuong</span>
            </div>
        }
    </form>
</div>
