@{
    Layout = "_MyLayoutCustomer";
    string IdLoai = "";
    var loaiStr = Context.Request.Query["idloai"].ToString();
    IdLoai = loaiStr;

    string IdThuongHieu = "";
    var nhaccstr = Context.Request.Query["idthuonghieu"].ToString();
    IdThuongHieu = nhaccstr;

    int IdKhoangGia = 0;
    var khoanggia = Context.Request.Query["priceRange"].ToString();

    if (int.TryParse(khoanggia, out var parsed))
    {
        IdKhoangGia = parsed;
    }
    else
    {
        // Không parse được => giữ giá trị mặc định hoặc xử lý riêng
        IdKhoangGia = 0;
    }
}
@* @await Html.PartialAsync("Breadcrumb") *@
<!-- Shop Start -->
<div class="container-fluid d-flex flex-column min-vh-100 py-4 mt-4 ">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-4 " style="max-width: 408px">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Bộ lọc sản phẩm</h5>
                </div>
                <div class="card-body">
                    @await Component.InvokeAsync("MenuLoai", new { idloai = IdLoai })
                    @await Component.InvokeAsync("MenuThuongHieu", new { idthuonghieu = IdThuongHieu })
                    <!--Start Filter by Price-->
                    @await Component.InvokeAsync("MenuGia", new { selectedPriceRange = IdKhoangGia })
                    <!--End Filter by Price-->
                </div>
            </div>
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-8">
            <!-- Products will be rendered here by -->
            <div class="product-content-container mt-4">
                @RenderBody()
            </div>
                
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->

<style>
    .btn-outline-primary {
        transition: all 0.3s;
    }

    .btn-outline-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }

    .dropdown-menu {
        border-radius: 0.5rem;
    }

    .dropdown-item {
        padding: 0.5rem 1.5rem;
        transition: all 0.2s;
    }

    .dropdown-item:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .dropdown-item.active {
        background-color: rgba(0, 123, 255, 0.2);
        color: #212529;
    }

    .page-link {
        border-radius: 0.25rem !important;
        margin: 0 3px;
        color: #3D464D;
        background-color: #fff;
        border: 1px solid #DEE2E6;
        transition: all 0.3s;
    }

    .page-item.active .page-link {
        background-color: #FFD333;
        border-color: #FFD333;
        color: #3D464D;
    }

    .page-link:hover {
        background-color: #FFD333;
        color: #3D464D;
        border-color: #FFD333;
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .product-container {
        min-height: 400px;
    }

    .filter-placeholder {
        min-height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px dashed #dee2e6;
        border-radius: 0.25rem;
        padding: 1rem;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
    }

    /* Transition for view change */
    .product-grid.list-view {
        grid-template-columns: 1fr;
    }

    .product-count {
        font-size: 0.9rem;
    }

    .product-container {
        animation: fadeIn 0.6s ease;
    }
</style>

<script>
    // Script to toggle between grid and list view
    $(document).ready(function() {
        $("#gridViewBtn").click(function() {
            $(this).addClass("active");
            $("#listViewBtn").removeClass("active");
            $(".product-grid").removeClass("list-view");
        });

        $("#listViewBtn").click(function() {
            $(this).addClass("active");
            $("#gridViewBtn").removeClass("active");
            $(".product-grid").addClass("list-view");
        });
    });
</script>