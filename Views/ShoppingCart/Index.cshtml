@model IEnumerable<LaptopShop.ViewModels.CartViewModel>
@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "_MyLayoutCustomer";
}

<!-- Cart Start -->
<div class="container-fluid py-5">
    <div class="container">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
            <span class="bg-secondary pr-3">Giỏ hàng của bạn</span>
        </h2>

        <div class="row px-xl-5">
            @if (Model != null && Model.Any())
            {
                <div class="col-lg-8 mb-5">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-0">
                            <table class="table table-hover mb-0">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th class="py-3 pl-4" style="width: 40%;">Sản phẩm</th>
                                        <th class="py-3 text-center" style="width: 15%;">Đơn giá</th>
                                        <th class="py-3 text-center" style="width: 15%;">Số lượng</th>
                                        <th class="py-3 text-center" style="width: 20%;">Thành tiền</th>
                                        <th class="py-3 text-center" style="width: 10%;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="py-3 pl-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="mr-3">
                                                        <img src="~/Hinh/Laptop/@item.Hinh" alt="@item.Name"
                                                             class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                                    </div>
                                                    <div>
                                                        <a asp-action="Detail" asp-controller="Shop" asp-route-idlaptop="@item.Id"
                                                           class="h6 text-decoration-none text-truncate" style="max-width: 240px; display: block;">
                                                            @item.Name
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3 text-center align-middle">
                                                <span class="font-weight-medium">@string.Format("{0:N0}", item.Price) VNĐ</span>
                                            </td>
                                            <td class="py-3 text-center align-middle">
                                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                                    <div class="input-group-btn">
                                                        <a asp-action="GiamSoLuong" asp-controller="ShoppingCart" asp-route-idlaptop="@item.Id"
                                                           class="btn btn-sm btn-outline-secondary">
                                                            <i class="fa fa-minus"></i>
                                                        </a>
                                                    </div>
                                                    <input type="text" class="form-control form-control-sm bg-light text-center border-0" value="@item.Amount" readonly>
                                                    <div class="input-group-btn">
                                                        <a asp-action="ThemVaoGio" asp-controller="ShoppingCart" asp-route-idlaptop="@item.Id"
                                                           class="btn btn-sm btn-outline-secondary">
                                                            <i class="fa fa-plus"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3 text-center align-middle">
                                                <span class="font-weight-bold text-primary">@string.Format("{0:N0}", item.ThanhTien) VNĐ</span>
                                            </td>
                                            <td class="py-3 text-center align-middle">
                                                <a class="btn btn-sm btn-danger rounded-circle" asp-action="Remove" asp-controller="ShoppingCart" asp-route-idlaptop="@item.Id">
                                                    <i class="fa fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        @await Html.PartialAsync("ButtonContinueShopping")
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0">Mã giảm giá</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Nhập mã giảm giá">
                                <div class="input-group-append">
                                    <button class="btn btn-primary">Áp dụng</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0">Thông tin đơn hàng</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <h6>Tạm tính:</h6>
                                <h6>@string.Format("{0:N0}", Model.Sum(x => x.ThanhTien)) VNĐ</h6>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <h6>Phí vận chuyển:</h6>
                                <h6>30,000 VNĐ</h6>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <h5 class="font-weight-bold">Tổng cộng:</h5>
                                <h5 class="font-weight-bold text-primary">@string.Format("{0:N0}", Model.Sum(x => x.ThanhTien) + 30000) VNĐ</h5>
                            </div>
                            <a asp-action="Index" asp-controller="Checkout" class="btn btn-primary btn-block py-3">
                                <i class="fa fa-credit-card mr-2"></i>Tiến hành thanh toán
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                @await Html.PartialAsync("EmptyCart", "Giỏ hàng của bạn đang trống")
            }
        </div>
    </div>
</div>
<!-- Cart End -->